<div class="container">
  <div class="row mx-auto">
    <h2>ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-horizontal mt-4">
    <div class="form-group">
      <%= f.label :メールアドレス, class: 'col-2 offset' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-sm col-4' %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード, class: 'col-2 offset' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control-sm col-4' %>
    </div>

    <!--<% if devise_mapping.rememberable? %>-->
      <!--<div class="field">-->
        <!--<%= f.check_box :remember_me %>-->
        <!--<%= f.label :remember_me %>-->
      <!--</div>-->
    <!--<% end %>-->

    <div class="actions col offset">
      <%= f.submit "ログイン", class: 'btn btn-primary col-2' %>
    </div>
  </div>
  <% end %>

  <!--<%= render "devise/shared/links" %>-->

  <div class="row mb-4">
    <h4 class="col-12 offset-1 mt-5">会員登録がお済みでない方</h4>
    <%= link_to 'こちら', new_user_registration_path, class: 'col-1 offset-2' %>から新規登録を行ってください。
    <h5 class="col-12 offset-1 mt-3">パスワードをお忘れですか？</h5>
    <%= link_to 'パスワードをお忘れの方はこちら', new_user_password_path, class: 'col-3 offset-2' %>をクリックして再設定してください。
  </div>
</div>