<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">プロフィール編集</h3>

      <div class="form-body p-4">
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">ニックネーム</label>
        <%= f.text_field :nickname, autofocus: true, id: "inputName", placeholder: "ニックネーム", class: 'form-control mb-3' %>
        <label for="inputImage">アイコン</label><br />
        <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.jpg", class: 'rounded-circle' %>
        <%= f.attachment_field :icon, placeholder: "プロフィールアイコン", class: 'w-100 mt-3 mb-2' %>

        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
      </div>
    </div>
  </div>
</div>