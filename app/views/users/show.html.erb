<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row offset-3">
        <div class="col-1 offset-2">
          <p><%= attachment_image_tag @user, :icon, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "mt-3 rounded-circle" %></p>
        </div>

        <div class="col-12">
          <h4 class="text-left offset-2 mt-1 text-size-md"><%= @user.nickname %></h4>
          <% if @user.id == current_user.id %>
            <span class="text-left offset-2"><%= link_to "プロフィール編集", edit_user_path(@user), class: 'text-dark' %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag post, :image, class: "card-img-top" %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <p><%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %></p>
        </div>
        <div class="col-10">
          <p>
            <%= link_to post_path(post), class: 'text-secondary' do %>
              タイトル:<%= post.title %>
            <% end %>
          </p>
          <!--<p>内容:<%= post.contents %></p>-->
          <span>ニックネーム:<%= post.user.nickname %></span>
          <p><%= "#{post.comments.count} コメント" %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <%= paginate @posts %>
</div>