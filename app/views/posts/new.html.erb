<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">投稿フォーム</h3>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <%= @post.errors.count %>件のエラーが発生しました
          <% @post.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <%= form_with model: @post, local:true do |f| %>
          <!--<div class="input-group mb-3 mt-4">-->
          <h4>タイトル</h4>
          <%= f.text_field :title, class: "form-control" %>
          <!--</div>-->
          <h4>内容</h4>
          <%= f.text_area :contents, class: "form-control", rows: "3" %>
          <h4>画像</h4>
          <%= f.attachment_field :image, class: "w-100" %>
          <hr>
          <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>