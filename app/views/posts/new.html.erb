<div>
  <h3>投稿フォーム</h3>
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <% @post.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: @post, local:true do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>内容</h4>
    <%= f.text_area :contents %>
    <h4>画像</h4>
    <%= f.attachment_field :image %>
    <%= f.submit '投稿' %>
  <% end %>
</div>