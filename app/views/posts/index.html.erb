<div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag post, :image, class: "card-img-top" %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <p><%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg", class: "mt-3 rounded-circle" %></p>
        </div>
        <div class="col-10">
          <p>
            <%= link_to post_path(post), class: "text-dark" do %>
              <strong><span>タイトル:<%= post.title %></span></strong>
            <% end %>
          </p>
          <!--<p>内容:<%= post.contents %></p>-->
          <span>ニックネーム:<%= post.user.nickname %> | </span>
          <span><%= link_to "#{post.comments.count} コメント", post_path(post), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <%= paginate @posts %>
</div>
